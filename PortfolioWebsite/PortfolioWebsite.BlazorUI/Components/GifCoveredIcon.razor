@if(Icon != null)
{
    @* TODO: move to css class? *@
    <i class="fas @Icon.IconRef main-color gif-covered-button"
       style="font-size: @Icon.FontSize;
              background: url(@Icon.OverlayGifUrl);
              background-size: 50%;
              background-position: center;
              -webkit-background-clip: text;
              color: transparent;
              filter: grayscale(50%);"></i>
}

@code {
    [Parameter]
    public TextIconModel Icon { get; set; }
}
