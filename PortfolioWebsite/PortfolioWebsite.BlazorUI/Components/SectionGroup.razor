@* TODO: remove hardcoded vp-anim *@
@if (SectionGroupInfo.HasTitle())
{
    <div class="container-fluid main-color text-center vp-anim-4">
        <h2>@SectionGroupInfo.Title</h2>
    </div>
}
<div class="overflow-hidden">
    @foreach (var section in SectionGroupInfo.Sections)
    {
        <SectionRow Section="section" />
    }
</div>

@code {
    [Parameter]
	public SectionGroupInfoModel SectionGroupInfo { get; set; }
}
