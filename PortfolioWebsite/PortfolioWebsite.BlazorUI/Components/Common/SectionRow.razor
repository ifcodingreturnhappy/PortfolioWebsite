<div class="row @SpacingClasses align-items-center">
    <div class="@MainOrderClasses">
        <div class="@SpacingClasses">
            <ContentCard Content="@Section.MainContent" />
        </div>
    </div>

    <div class="@ExtraOrderClasses">
        <div class="@SpacingClasses">
            <ContentCard Content="@Section.ExtraContent" />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public SectionInfoModel Section { get; set; }

    private string MainOrderClasses;
    private string ExtraOrderClasses;
    private string SpacingClasses;

    protected override void OnParametersSet()
    {
        (this.MainOrderClasses, this.ExtraOrderClasses) = Section.ContentPositioning.ToCss();
        this.SpacingClasses = Section.ContentSpacing.ToCss();
    }
}
