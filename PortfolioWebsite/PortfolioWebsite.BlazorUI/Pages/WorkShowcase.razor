@page "/work"
@inject IArticleService articleService;

<LoadablePage Page="page" />

@code {
    private PageInfoModel page;

    protected async override Task OnInitializedAsync()
    {
        var workShowcase = await this.articleService.GetWorkShowcaseInfoAsync();
        this.page = workShowcase.Page;
    }
}

