@page "/work/{articleId:guid}"
@inject IArticleStore _articleStore;

<LoadablePage Page="page" />

@code {
    [Parameter]
    public Guid articleId { get; set; }

    private PageInfoModel page;

	// TODO: improve performance: cache articles after first load
    protected async override Task OnInitializedAsync()
    {
        var articleInfo = await this._articleStore.GetArticleByIdAsync(articleId);
		this.page = articleInfo.Page;
    }
}