@page "/"

@inject IJSRuntime JSRuntime;
@inject IJavascriptViewportAnimator JSAnimator;


<div>
    <h2 class="main-billboard white-text text-left vp-anim-3">{</h2>
</div>
<div>
    <h1 class="main-billboard main-color text-center vp-anim-1">//Code made with passion.<span class="white-text loop-opacity">_</span></h1>
</div>
<div>
    <h2 class="main-billboard white-text text-left vp-anim-4">}</h2>
</div>

<div class="empty-block"></div>

<div class="container">
    <h2 class="white-text text-center mb-5 vp-anim-5">A personal coding journey.</h2>
    <div class="container vp-anim-5">
        <h6 class="main-color text-center">
            This website is a personal page where I showcase my passion projects and all the things I do related to programming.
        </h6>
        <h6 class="main-color text-center">
            Join me in this adventure!
        </h6>
    </div>
</div>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSAnimator.SetupJavascriptViewportAnimation(JSRuntime);
        }
    }
}