@inject NavigationManager NavManager

<div class="card text-center glow over-background-color" @onclick="OpenCard">
    <img class="card-img-top mx-auto mb-0 mt-5" src="@TaggedCard.ImagePath" alt="@TaggedCard.Title Card Image" style="max-width:30%" />

    <p class="main-color text-right small" style="position: absolute; top:10px; left:5px">
        Created at
    </p>

    <p class="highlighted-main-color text-right" style="position: absolute; top:30px; left:5px">
        <span><i class="far fa-calendar-alt main-color"></i></span> @(TaggedCard.CreatedAt.ToFormattedDate())
    </p>

    @if(TaggedCard.LastUpdatedAt.HasValue)
    {
        <p class="main-color text-right small" style="position: absolute; top:10px; right:5px">
            Last Updated at
        </p>

        <p class="highlighted-main-color text-right" style="position: absolute; top:30px; right:5px">
            <span><i class="far fa-calendar-alt main-color"></i></span> @(TaggedCard.LastUpdatedAt?.ToFormattedDate())
        </p>
    }

    <div class="card-body">
        <h4 class="main-color">@TaggedCard.Title</h4>
        <p class="highlighted-main-color mb-4">@(TaggedCard.Description)</p>
        <div>
            @foreach (var tag in TaggedCard.Tags)
            {
                <span class="badge badge-secondary mb-1 secondary-background-color secondary-color" style="font-size: 1em">@tag</span>
                <span>  </span>
            }
        </div>
    </div>
</div>


@code {
    [Parameter]
    public ContentTaggedCardInfoModel TaggedCard { get; set; }

    private void OpenCard()
    {
        this.NavManager.NavigateTo(this.TaggedCard.LinkUrl);
    }
}
